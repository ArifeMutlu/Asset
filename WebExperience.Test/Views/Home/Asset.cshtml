@model WebExperience.Test.Models.dtos.Assetdto
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <br/>
<div class="container">
    <form id="assetFormId">
        <input type="hidden" value="@Model.asset_id" name="asset_id"/>
        <div class="form-group">
            <label for="file_name">File Name:</label>
            <input type="text" class="form-control" value="@Model.file_name" id="file_name" name="file_name">
        </div>
        <div class="form-group">
            <label for="mime_type">Mime Type:</label>
            <input type="text" class="form-control" value="@Model.mime_type" id="mime_type" name="mime_type">
        </div>
        <div class="form-group">
            <label for="created_by">Created By:</label>
            <input type="text" class="form-control" value="@Model.created_by" id="created_by" name="created_by">
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="text" class="form-control" value="@Model.email" id="email" name="email">
        </div>
        <div class="form-group">
            <label for="country">country:</label>
            <input type="text" class="form-control" value="@Model.country" id="country" name="country">
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea name="description" id="description" class="form-control" > @Model.description</textarea>
        </div>
        <button type="button" onclick="Save()" class="btn btn-default">Submit</button>
    </form>
</div>

</body>

<script>
    function Save() {
        var model = $("#assetFormId").serialize();
        $.ajax({
            type: "POST",
            url: "/api/Create",
            data: model,
            success: function (data) {
                if (data == null) {
                    alert("Fail");
                }
                else {
                    alert("Success");
                }
            },
            error: function (xhr, textStatus, errorThrown) {
                // TODO: Show error
            }
        });
    }
</script>